<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.mpi.repository.RefreshTokenRepository">
    <select id="findByUserId" parameterType="string" resultType="RefreshToken">
    	SELECT 
    		* 
    		FROM tb_refresh_token
    		WHERE token = #{token}
    </select>
    <delete id="deleteByUser" parameterType="User">
    	DELETE 
    		FROM tb_refresh_token
    		WHERE token = #{userId}
    </delete>
    <delete id="deleteByToken" parameterType="User">
    	DELETE 
    		FROM tb_refresh_token
    		WHERE id = #{id}
    </delete>
    <insert id="save" parameterType="RefreshToken" useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
    	INSERT INTO tb_refresh_token
    	(	
    		user_id,
    		token,
    		expiry_date
    	)
    	VALUES
    	(
    		#{userId},
    		#{token},
    		#{expiryDate}
    	)
    </insert>
</mapper>